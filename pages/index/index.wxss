/**index.wxss**/
page{
  background-color: #F0F0F0;
}
swiper {
  height:320rpx;
}
swiper image{
  width:750rpx;
  height:320rpx;
}
/* 活动标题 */
.title{
  font-size:34rpx;
  color:#3C3C3C;
  line-height: 1;
  padding:20rpx 30rpx;
  font-weight:500
}

/* 活动列表 */
/* .item{
  position: relative;
} */
.item{
  margin-bottom: 20rpx
}
.item image{
  width:750rpx;
  height:320rpx;
}
.item .info{
  height:180rpx;
  padding:16rpx 130rpx 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  position: relative;
}
.item .info .name{
  font-size:36rpx;
  color:#3c3c3c
}
.item .info .extra{
  color:#B4B4B4;
  font-size:26rpx;
  position: absolute;
  bottom:20rpx;
}
.item .info .status{
  font-size:34rpx;
  color:red;
  position: absolute;
  right:34rpx;
  top:30rpx;
}